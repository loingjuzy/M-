/* pages/mine/index.wxss */

.header {
  width: 100%;
  height: 300rpx;
  background-image: linear-gradient(#39b54a, #8dc63f);
  position: fixed;
  z-index: 999;
  top: 0;
  left: 0;
}

.userInfo {
  position: absolute;
  left: 32rpx;
  top: 120rpx;
  /* buttom:32rpx; */
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  color: #fff;
}

.userAvatarUrl {
  overflow: hidden;
  /* display: block;   */
  width: 140rpx;
  height: 140rpx;
  /* margin: 20rpx;  
  margin-top: 50rpx;   */
  border-radius: 50%;
  border: 2px solid #fff;
  box-shadow: 3px 3px 10px rgba(0, 0, 0, 0.2);
}

.userNickName {
  font-size: 32rpx;
}

.useronline {
  font-size: 28rpx;
}

.usersorce {
  margin-top: 300rpx;
  display: flex;
  float: left;
  flex-flow: row wrap;
  text-align: center;
  align-items: center;
  justify-content: center;
  width: 100%;
  height: 200rpx;
  box-shadow: 0px 7px 7px -7px #5e5e5e;
}

.usersorce view {
  width: 33.33%;
}

.usersorce view view {
  display: flex;
  align-items: center;
  justify-content: center;
  align-content: center;
}

.usersorce view image {
  width: 32rpx;
  height: 32rpx;
  margin-right: 12rpx;
}

.usersorce view view text{
font-size: 20rpx;
}