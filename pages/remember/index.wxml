<view class="progressBar-1">
<view class="progressBar-2" style="width:{{studyNum/total*100}}%;">
</view>
</view>

<view class="cardnumber-1">
<text>卡片  {{studyNum}} / {{total}}</text>
<image src="/pages/images/setting.png"></image>
</view>


<view class="content-1">
<view class="content-2">{{userStudyInfo[currentQuestion].content}}</view>
<view wx:if="{{answer}}" class="content-3" bindtap="btnFindanswer">查看</view>
<view wx:else class="content-4" bindtap="btnFindanswer">{{userStudyInfo[currentQuestion].answer}}</view>
</view>

<view class="level-1">
<view class="level-2" bindtap="deleteQuestion">
<image  src="/pages/images/easy.png"></image>
<text>太简单了</text>
</view>
<view class="level-2">
<image  src="/pages/images/normal.png"></image>
<text>熟悉中</text>
</view>
<view class="level-2">
<image src="/pages/images/hard.png"></image>
<text>不认识</text>
</view>
</view>