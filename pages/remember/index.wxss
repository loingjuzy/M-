/* pages/remember/index.wxss */

.progressBar {
  background: #fff;
  position: fixed;
  height: 6rpx;
  width: 100%;
}

.progressBar view {
  background: #259b24;
  height: 6rpx;
}

.cardnumber {
  display: flex;
  flex-direction: row-reverse;
  justify-content: space-between;
  color: #666;
  font-size: 24rpx;
  padding: 24rpx 16rpx;
}

.question-answer {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 700rpx;
  width: 100%;
}

.question {
  display: flex;
  text-align: center;
  align-items: center;
  justify-content: center;
  color: #333;
  width: 100%;
  height: 200rpx;
}

.i-tags {
  display: flex;
  flex-direction: column;
  align-items: center;
  color:#666;
  width: 100%;
  height: 500rpx;
}

.answer {
  display: flex;
  text-align: center;
  flex-direction: column;
  align-items: center;
  /* justify-content: center; */
  color: green;
  width: 100%;
  height: 500rpx;
}

.level {
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  color: #333;
  font-size: 30rpx;
}

.level view {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  background: #fff;
  border-radius: 16rpx;
  width: 200rpx;
  height: 240rpx;
}

.level image {
  padding: 0 0 34rpx 0;
  display: block;
  width: 96rpx;
  height: 96rpx;
}

.level text {
  display: block;
}

.success-content {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 900rpx;
}

.success-content image {
  display: block;
  padding-bottom: 34rpx;
  width: 160rpx;
  height: 160rpx;
}

.success-text1 {
  color: #333;
  font-size: 36rpx;
  padding-bottom: 18rpx;
}

.success-text2 {
  color: #666;
  font-size: 28rpx;
}

.exam-question {
  display: flex;
  align-items: center;
  color: #333;
  width: 100%;
  height: 200rpx;
  font-size: 32rpx;
}

.exam-question view {
  display: flex;
  align-items: center;
  flex-flow: row wrap;
  padding: 0 24rpx;
   width: 100%;
}

.answer-items {
  background-color: #fff;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 500rpx;
  width: 100%;
  padding: 0 24rpx;
}

radio {
  display: flex;
  align-items: center;
  flex-flow: row wrap;
  height: 125rpx;
  width: 100%;
  border-bottom: solid 1rpx #f1f2f3;
  color: #666;
  font-size: 30rpx;
}

.nextbtn {
  margin: 200rpx 0;
}
